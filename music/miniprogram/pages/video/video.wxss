/* miniprogram/pages/video/video.wxss */

.videoContainer .header {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}

.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}

.videoContainer .header .search {
  border: 1rpx solid #eee;
  font-size: 26rpx;
  color: #d43c33;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
}

.videoContainer .nav {
}

.videoContainer .nav .navScroll {
  display: flex;
  height: 100rpx;
}

.videoContainer .nav .navScroll .scrollItem {
  font-size: 28rpx;
  margin: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  white-space: nowrap;
}

.videoContainer .nav .navScroll .scrollItem.active {
  border-bottom: 1rpx solid #d43c33;
}
