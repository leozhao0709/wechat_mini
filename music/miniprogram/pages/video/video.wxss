/* miniprogram/pages/video/video.wxss */

.videoContainer .header {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}

.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}

.videoContainer .header .search {
  border: 1rpx solid #eee;
  font-size: 26rpx;
  color: #d43c33;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
}

.videoContainer .nav .navScroll {
  display: flex;
  height: 100rpx;

  box-sizing: border-box;
  padding: 0 20rpx;
}

.videoContainer .nav .navScroll .scrollItem {
  font-size: 28rpx;
  margin: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  white-space: nowrap;
}

.videoContainer .nav .navScroll .scrollItem.active {
  border-bottom: 1rpx solid #d43c33;
}

.videoScroll {
  margin-top: 10rpx;
  height: calc(100vh - 152rpx);
}
.videoItem {
  padding: 0 3%;
}

.videoItem .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

.videoItem .content {
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
