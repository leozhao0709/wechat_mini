/**index.wxss**/
.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

.navContainer {
  display: flex;
  justify-content: space-around;
}

.navItem {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  font-size: 50rpx;
  background-color: rgb(240, 19, 19);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  margin: 20rpx 0;
}

.navItem text {
  font-size: 26rpx;
}

.recommendContainer,
.topList {
  padding: 20rpx;
}

.recommendScroll {
  display: flex;
  height: 300rpx;
}

.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* ranking area */

.topList .topListSwiper {
  height: 400rpx;
}

.topList .swiperItem {
  background-color: #ededed;
  width: 96%;
}

.topList .swiperItem .title {
  font-size: 30rpx;
}

.topList .musicItem {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.topList .musicItem image {
  min-width: 100rpx;
  max-width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.topList .musicItem .count {
  min-width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.topList .musicItem .musicName {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  height: 100rpx;
  max-width: 100%;
  line-height: 100rpx;
}
